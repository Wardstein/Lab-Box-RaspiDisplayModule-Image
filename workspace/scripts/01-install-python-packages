set -x
set -e

export LC_ALL=C

source /common.sh
install_cleanup_trap

# Scripts run as root by default


# Raspberry Pi OS image with Debian 12 Bookworm brings Python 3.11 with it (as of 13.01.2026)
# Raspberry Pi OS image with Debian 13 Trixie brings Python 3.13 with it (as of 13.01.2026)

# Upgrade pip
python3 -m pip install --upgrade pip 

# Install packages we rely on. NEEDS TO BE UPDATED WHEN USING SOMETHING ADDITIONAL
python3 -m pip install pyside6 aiohttp
